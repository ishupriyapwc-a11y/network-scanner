import socket  
from datetime import datetime  

# Banner  
print("="*50)  
print("   Simple Python Network Scanner   ")  
print("="*50)  

# Ask user for target host  
target = input("Enter the host to scan (e.g., 127.0.0.1 or scanme.nmap.org): ")  

# Record start time  
start_time = datetime.now()  

print(f"\nScanning target: {target}")  
print(f"Time started: {start_time}\n")  

try:  
    # Scan ports from 50 to 85 (you can expand range later)  
    for port in range(50, 86):  
        s = socket.socket(socket.AF_INET, socket.SOCK_STREAM)  
        socket.setdefaulttimeout(1)  # 1 second timeout  
        result = s.connect_ex((target, port))  # returns 0 if port is open  
        if result == 0:  
            print(f"Port {port}: OPEN")  
        s.close()  

except KeyboardInterrupt:  
    print("\nScan stopped by user.")  
except socket.gaierror:  
    print("Hostname could not be resolved.")  
except socket.error:  
    print("Couldn't connect to server.")  

# Record end time  
end_time = datetime.now()  
print(f"\nScan completed in: {end_time - start_time}")  
